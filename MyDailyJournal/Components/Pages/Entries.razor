@page "/entries"
@using Microsoft.AspNetCore.Components.Rendering
@inject MoodService MoodService
@inject JournalService JournalService
@inject NavigationManager Navigation



<PageTitle>All Journal Entries</PageTitle>
<div class="card p-3 mb-4">
    <div class="row g-3">

        <!-- Search -->
        <div class="col-md-4">
            <input class="form-control"
                   placeholder="Search title or content..."
                   @bind="_searchText" />
        </div>

        <!-- Date range -->
        <div class="col-md-3">
            <input type="date" class="form-control"
                   @bind="_startDate" />
        </div>

        <div class="col-md-3">
            <input type="date" class="form-control"
                   @bind="_endDate" />
        </div>

        <!-- Mood -->
        <div class="col-md-2">
            <select class="form-select" @bind="_selectedMoodId">
                <option value="">All Moods</option>
                @foreach (var mood in _moods)
                {
                    <option value="@mood.Id">@mood.Name</option>
                }
            </select>
        </div>

        <!-- Apply -->
        <div class="col-md-12 text-end">
            <button class="btn btn-primary"
                    @onclick="ApplyFilters">
                üîç Apply Filters
            </button>
        </div>

    </div>
</div>

<div class="container mt-4">
    <h2 class="mb-4">üìò Journal Entries</h2>

    @if (_loading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
        </div>
    }
    else
    {
        <div class="list-group">
            @foreach (var entry in _entries)
            {
                <div class="list-group-item list-group-item-action"
                     @onclick="() => OpenEntry(entry.Id)">

                    <div class="d-flex justify-content-between">
                        <div>
                            <h5>@entry.Title</h5>
                            <small class="text-muted">
                                @entry.EntryDate.ToString("dddd, MMM dd yyyy")
                            </small>
                        </div>

                        <span style="font-size: 28px;">
                            @entry.PrimaryMood.Emoji
                            @{
                                void Emoji(RenderTreeBuilder builder)
                                {
                                    throw new NotImplementedException();
                                }
                            }

                        </span>
                    </div>

                    @if (entry.EntryTags?.Any() == true)
                    {
                        <div class="mt-2">
                            @foreach (var tag in entry.EntryTags)
                            {
                                <span class="badge bg-secondary me-1">
                                    @tag.Tag.Name
                                </span>
                            }
                        </div>
                    }
                </div>
            }
        </div>

        <!-- Pagination -->
        <div class="d-flex justify-content-between align-items-center mt-4">
            <button class="btn btn-outline-primary"
                    disabled="@(_currentPage == 1)"
                    @onclick="PreviousPage">
                ‚¨Ö Previous
            </button>

            <span>
                Page @_currentPage of @_totalPages
            </span>

            <button class="btn btn-outline-primary"
                    disabled="@(_currentPage == _totalPages)"
                    @onclick="NextPage">
                Next ‚û°
            </button>
        </div>
    }
</div>
@code {
    private List<Models.JournalEntry> _entries = new();
    private bool _loading = true;

    private int _currentPage = 1;
    private int _pageSize = 10;
    private int _totalPages;
    
    private string _searchText;
    private DateTime? _startDate;
    private DateTime? _endDate;
    private int? _selectedMoodId;

    private List<Mood> _moods = new();
    private List<int> _selectedTagIds = new();


    protected override async Task OnInitializedAsync()
    {
        _moods = await MoodService.GetAllMoods();

        await LoadPage();
    }


    private async Task LoadPage()
    {
        _loading = true;

        var result = await JournalService.SearchAndFilterEntries(
            _searchText,
            _startDate,
            _endDate,
            _selectedMoodId,
            _selectedTagIds,
            _currentPage,
            _pageSize
        );

        _entries = result.entries;
        _totalPages = (int)Math.Ceiling(result.totalCount / (double)_pageSize);

        _loading = false;
    }
    private async Task ApplyFilters()
    {
        _currentPage = 1;
        await LoadPage();
    }



    private async Task NextPage()
    {
        if (_currentPage < _totalPages)
        {
            _currentPage++;
            await LoadPage();
        }
    }

    private async Task PreviousPage()
    {
        if (_currentPage > 1)
        {
            _currentPage--;
            await LoadPage();
        }
    }

    private void OpenEntry(int id)
    {
        Navigation.NavigateTo($"/journal-entry/{id}");
    }
}
